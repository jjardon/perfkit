#ifndef __PKC_VERSION_H__
#define __PKC_VERSION_H__

/**
 * SECTION:pkc-version
 * @title: Versioning API
 * @short_description: compile-time version checking
 *
 * provides some API and definitions for compile-time version checking.
 */

/**
 * PKC_MAJOR_VERSION:
 *
 * Major version of Perfkit-Chart, e.g. 1 in "1.2.3"
 */
#define PKC_MAJOR_VERSION (@PKC_MAJOR_VERSION@)

/**
 * PKC_MINOR_VERSION:
 *
 * Minor version of Perfkit-Chart, e.g. 2 in "1.2.3"
 */
#define PKC_MINOR_VERSION (@PKC_MINOR_VERSION@)

/**
 * PKC_MICRO_VERSION:
 *
 * Micro version of Perfkit-Chart, e.g. 3 in "1.2.3"
 */
#define PKC_MICRO_VERSION (@PKC_MICRO_VERSION@)

/**
 * PKC_API_VERSION_S:
 *
 * Version of the API of Perfkit-Chart
 */
#define PKC_API_VERSION_S "@PKC_API_VERSION@"

/**
 * PKC_VERSION_S:
 *
 * Stringified version of Perfkit-Chart, e.g. "1.2.3".
 *
 * Useful for display.
 */
#define PKC_VERSION_S "@PKC_VERSION@"

/**
 * PKC_VERSION_HEX:
 *
 * Hexadecimally encoded version of Perfkit-Chart, e.g. 0x01020300"
 *
 * Useful for comparisons.
 */
#define PKC_VERSION_HEX (PKC_MAJOR_VERSION << 24 | PKC_MINOR_VERSION << 16 | PKC_MICRO_VERSION << 8)

/**
 * PKC_CHECK_VERSION:
 * @major: major component of the version to check
 * @minor: minor component of the version to check
 * @micro: micro component of the version to check
 *
 * Checks whether the decomposed version (@major, @minor, @micro) is
 * bigger than the version of Perfkit-Chart. This is a compile-time
 * check only.
 */
#define PKC_CHECK_VERSION(major,minor,micro)   \
        (PKC_MAJOR_VERSION >= (major) ||       \
         (PKC_MAJOR_VERSION == (major) &&      \
          PKC_MINOR_VERSION > (minor)) ||      \
         (PKC_MAJOR_VERSION == (major) &&      \
          PKC_MINOR_VERSION == (minor) &&      \
          PKC_MICRO_VERSION >= (micro)))

#endif /* __PKC_VERSION_H__ */
